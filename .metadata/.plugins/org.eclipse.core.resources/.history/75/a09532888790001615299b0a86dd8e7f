import java.util.*;

class TestClass {
    public static void main(String args[] ) throws Exception {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        long[] arr = new long[n];
        
        long sumA =0,sumB =0,sumC = 0;
        for(int i = 0; i < n; i++){
        	arr[i] = in.nextInt();
        }
        
        for(int i = 0; i < n; i+=3){
        	sumA += arr[i];
        	sumB += arr[i+1];
        	sumC += arr[i+2];
        }
        
        System.out.println(sumA + " " + sumB + " " + sumC);
    }
}
